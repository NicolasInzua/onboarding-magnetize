{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // Emit Config
    "noEmit": true,

    // Modules Config
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Language and Environment Config
    "target": "ESNext",
    "jsx": "react-jsx",

    // JS support
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
